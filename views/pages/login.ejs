<div class="register">
  <a href="/" class="brand">
    <div class="brand-logo">
      <img
        src="/images/brand.png"
        alt="brand"
        class="d-inline-block align-text-top me-1"
      />
    </div>
  </a>
  <div class="brand-title">AllVoice</div>

  <h3 class="mt-3 text-center">Sign in</h3>
  <% if (messages) { %> <%- messages() %> <% } %>
  <form action="/auth/login" method="post" class="input">
    <div class="mb-3">
      <label for="Email" class="form-label">Email</label>
      <input type="email" class="form-control" name="email" />
    </div>
    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input type="password" class="form-control" name="password" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  <div class="mt-3">
    <p class="">
      Not yet a Member? <a href="/auth/register" class="account">Sign Up</a>
    </p>
  </div>
</div>
