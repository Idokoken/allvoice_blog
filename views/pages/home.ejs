<div class="home">
  <h2>Featured Posts</h2>
  <div class="featured">
    <% featuredPost.map((post, i) => {%>
    <div class="content">
      <a href="/post/<%= post._id %> " class="read">
        <div class="img-container">
          <img src="<%= post.cover %> " alt="cover" class="item-img" />
        </div>
        <h3><%= post.title %></h3>
        <div class="desc">
          <div class="name">
            <p><%= post.author %> -</p>
            <span><%= moment(post.createdAt).format('DD MMM, YY') %></span>
          </div>
        </div>
      </a>
    </div>
    <%}) %>
  </div>
  <div class="latest m-md-4">
    <h2>Latest Posts</h2>
    <div class="posts">
      <% posts.map((post, i) => {%>
      <div class="content">
        <a href="/post/<%= post._id %> " class="read">
          <div class="img-container">
            <img src="<%= post.cover %> " alt="cover" class="item-img" />
          </div>
          <div class="title">
            <h4><%= post.title %></h4>
            <div class="name">
              <p><%= post.author %></p>
              <span>- <%= moment(post.createdAt).format('DD MMM, YY') %></span>
            </div>
          </div>
        </a>
      </div>
      <% }) %>
    </div>
    <div class="more mt-4">
      <a class="btn btn-primary px-4" href="/post">More</a>
    </div>
  </div>
</div>
