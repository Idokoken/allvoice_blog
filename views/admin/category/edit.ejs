<div class="container-fluid py-4 my-0 addCatgory" style="min-height: 50vh">
  <div class="container">
    <h1 class="text-dark mt-2 mb-4">Add Genres</h1>
    <% if (messages) { %> <%- messages() %> <% } %>
    <form action="/category/edit/<%= category._id %> " method="post">
      <div class="form-group">
        <label for="name" class="mb-1">Name</label>
        <input
          type="text"
          name="name"
          placeholder="genre name"
          value="<%= category.name  %> "
          class="form-control my-2"
        />
      </div>
      <button type="submit" class="btn btn-info text-light mt-2">Submit</button>
    </form>
    <a href="/post/admin" class="btn btn-danger mt-4">Close</a>
  </div>
</div>
