<div class="container-fluid py-4 my-0 text-white bg-dark">
  <div class="container">
    <h1 class="text-darks">Add Post</h1>
    <form action="/post/create" method="post" enctype="multipart/form-data">
      <div class="form-group mb-3">
        <label class="mb-1" for="name">Title</label>
        <input
          type="text"
          name="title"
          placeholder="title"
          class="form-control"
        />
      </div>
      <div class="form-group mb-3">
        <label class="mb-1" for="author">Author</label>
        <input
          type="text"
          name="author"
          placeholder="author"
          class="form-control"
        />
      </div>

      <div class="form-group mb-3">
        <label class="mb-1" for="category">Category</label>
        <select name="category" id="category" class="form-control">
          <% for(let i = 0; i < category.length; i++) {%>
          <option value="<%=category[i].name%>"><%=category[i].name%></option>
          <% }%>
        </select>
      </div>
      <div class="form-group mb-3">
        <label class="mb-1" for="label">Description</label>
        <textarea
          class="form-control"
          placeholder="description"
          name="description"
          id="description"
          rows="5"
        ></textarea>
      </div>
      <div class="form-group mb-3">
        <label class="mb-1" for="cover">Post cover</label>
        <input
          type="file"
          name="cover"
          placeholder="cover"
          class="form-control"
        />
      </div>
      <button type="submit" class="btn btn-info text-light mt-3">Submit</button>
    </form>
    <a href="/post/admin" class="btn btn-danger mt-4">Close</a>
  </div>
