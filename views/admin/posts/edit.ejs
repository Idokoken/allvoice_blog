<div class="container-fluid py-4 my-0 addPost">
  <div class="container">
    <h1 class="text-darks mt-2 mb-4">Edit Post</h1>
    <% if (messages) { %> <%- messages() %> <% } %>
    <form
      action="/post/update/<%= post._id %> "
      method="post"
      enctype="multipart/form-data"
    >
      <div class="form-group mb-3">
        <label class="mb-1" for="name">Title</label>
        <input
          type="text"
          name="title"
          placeholder="title"
          value="<%= post.title %>"
          class="form-control"
        />
      </div>
      <div class="form-group mb-3">
        <label class="mb-1" for="artist">Author</label>
        <input
          type="text"
          name="author"
          value="<%= post.author %>"
          placeholder="author"
          class="form-control"
        />
      </div>
      <div class="form-group mb-3">
        <label class="mb-1" for="category">Category</label>
        <select name="category" id="category" class="form-control">
          <% for(let i = 0; i < category.length; i++) {%>
          <option value="<%=category[i].name%>"><%=category[i].name%></option>
          <% }%>
        </select>
      </div>
      <div class="form-group mb-3">
        <label class="mb-1" for="label">Description</label>
        <textarea
          class="form-control"
          placeholder="description"
          name="description"
          
          id="description"        
          rows="5"
        >
        <%= post.description %>
      </textarea>
      </div>

      <div class="form-group mb-4">
        <label class="mb-1" for="isFeatured"> Featured Post </label>
        <select
          class="form-select" aria-label="Default select example"
          name="isFeatured"
          id="isFeatured"
          
        >        
          <option value="true" <%= post.isFeatured === true ? 'selected' : '' %>>True</option>
          <option value="false" <%= post.isFeatured === false ? 'selected' : '' %>>False</option>
      
        </select>
      </div>
      <div class="form-group mb-3">
        <label class="mb-1" for="cover">Post cover</label>
        <input
          type="file"
          name="cover"
          placeholder="cover"
          class="form-control"
        />
      </div>
      <button type="submit" class="btn btn-info text-light mt-3">Submit</button>
    </form>
    <a href="/post/admin" class="btn btn-danger mt-4">Close</a>
  </div>
</div>


