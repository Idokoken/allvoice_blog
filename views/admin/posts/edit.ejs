<div class="container-fluid py-4 my-0 text-white bg-dark">
  <div class="container">
    <h1 class="text-darks">Edit Post</h1>
    <form
      action="/post/update/<%= post._id %> "
      method="post"
      enctype="multipart/form-data"
    >
      <div class="form-group mb-3">
        <label class="mb-1" for="name">Title</label>
        <input
          type="text"
          name="title"
          placeholder="title"
          value="<%= post.title %>"
          class="form-control"
        />
      </div>
      <div class="form-group mb-3">
        <label class="mb-1" for="artist">Author</label>
        <input
          type="text"
          name="author"
          value="<%= post.author %>"
          placeholder="author"
          class="form-control"
        />
      </div>
      <div class="form-group mb-3">
        <label class="mb-1" for="category">Category</label>
        <select name="category" id="category" class="form-control">
          <% for(let i = 0; i < category.length; i++) {%>
          <option value="<%=category[i].name%>"><%=category[i].name%></option>
          <% }%>
        </select>
      </div>
      <div class="form-group mb-3">
        <label class="mb-1" for="label">Description</label>
        <textarea
          class="form-control"
          placeholder="description"
          name="description"
          value="<%= post.description %>"
          rows="5"
        ></textarea>
      </div>
      <div className="form-group mb-5">
        <label className="mb-1" htmlFor="isFeatured"> Featured Post </label>
        <select
          className="form-select"
          aria-label="Default select example"
          value="<%= post.isFeatured.toString() %>"
        >
          <option value="false">False</option>
          <option value="true">True</option>
        </select>
      </div>
      <div class="form-group mb-3">
        <label class="mb-1" for="cover">Post cover</label>
        <input
          type="file"
          name="cover"
          placeholder="cover"
          class="form-control"
        />
      </div>
      <button type="submit" class="btn btn-info text-light mt-3">Submit</button>
    </form>
    <a href="/post/admin" class="btn btn-danger mt-4">Close</a>
  </div>
</div>
